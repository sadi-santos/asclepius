import { NavLink, Outlet, useNavigate } from "react-router-dom";
import useAuth from "../hooks/useAuth";
import { Hospital, LayoutDashboard, Users, Stethoscope, Calendar, LogOut } from "lucide-react";

export default function Layout() {
  const { user, logout } = useAuth();
  const nav = useNavigate();
  const go = (to: string) => () => nav(to);

  const linkCls = ({ isActive }: { isActive: boolean }) =>
    "flex items-center gap-2 px-3 py-2 rounded-lg text-sm " +
    (isActive ? "bg-blue-50 text-blue-700" : "text-gray-600 hover:bg-gray-100");

  return (
    <div className="min-h-screen bg-gray-50 flex">
      {/* Sidebar */}
      <aside className="w-64 bg-white border-r border-gray-200 hidden md:flex flex-col">
        <div className="h-16 flex items-center justify-center border-b">
          <div className="flex items-center gap-2">
            <Hospital className="w-7 h-7 text-blue-600" />
            <span className="font-semibold">Asclepius</span>
          </div>
        </div>
        <nav className="flex-1 p-4 space-y-2">
          <NavLink to="/" end className={linkCls}><LayoutDashboard className="w-5 h-5"/>Dashboard</NavLink>
          <NavLink to="/patients" className={linkCls}><Users className="w-5 h-5"/>Pacientes</NavLink>
          <NavLink to="/professionals" className={linkCls}><Stethoscope className="w-5 h-5"/>Profissionais</NavLink>
          <NavLink to="/appointments" className={linkCls}><Calendar className="w-5 h-5"/>Agendamentos</NavLink>
        </nav>
        <div className="p-4 border-t">
          <button onClick={()=>{ logout(); nav("/login"); }} className="w-full flex items-center justify-center gap-2 text-sm px-3 py-2 border rounded-lg text-gray-700 hover:bg-gray-50">
            <LogOut className="w-5 h-5"/> Sair
          </button>
        </div>
      </aside>

      {/* Main */}
      <div className="flex-1 flex flex-col">
        <header className="h-16 bg-white border-b px-4 md:px-8 flex items-center justify-between">
          <button className="md:hidden text-blue-600" onClick={go("/")}><Hospital className="w-6 h-6"/></button>
          <div className="text-sm text-gray-600">{user?.email}</div>
        </header>
        <main className="p-4 md:p-8"><Outlet/></main>
      </div>
    </div>
  );
}
